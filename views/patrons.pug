include ./partials/_head.pug
include ./partials/_nav.pug
body
  h1 Patrons
  p.search 
    a(href="patrons/new" class="button") Create New Patron
  form.search(action="/search?type=patron" method="post")
    input.search-box-patron(type="text" name="query")
    input.search-button(type="submit" value="Search")
  table
    thead
      tr
        th Name 
        th Address
        th Email
        th Library ID
        th Zip
    tbody.itemList
      each patron in patrons
        tr.item
          td 
            a(href="/patrons/update/" + patron.id) #{patron.first_name} #{patron.last_name}
          td #{patron.address}
          td #{patron.email}
          td #{patron.library_id}
          td #{patron.zip_code}
  div.pagination
  script(src="js/jquery-3.1.1.min.js")
  script(src="js/app.js")