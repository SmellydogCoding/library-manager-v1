include ./partials/_head.pug
include ./partials/_nav.pug
body
  h1 #{patron.first_name} #{patron.last_name}
  form.update(action="/patrons/update" + "?_method=PUT", method="post")
    input(type="hidden" name="patronid" value=patron.id)
    p
      label(for="first-name") First Name #[input#first-name(type="text" value=patron.first_name name="first_name" required)]
    p
      label(for="last-name") Last Name #[input#last-name(type="text" value=patron.last_name name="last_name" required)]
    p
      label(for="address") Address #[input#address(type="text" value=patron.address name="address" required)]
    p
      label(for="email") Email #[input#email(type="text" value=patron.email name="email")]
    p
      label(for="library-id") Library Id #[input#zip-code(type="text" value=patron.library_id name="library_id" required)]
    p
      label(for="zip-code") Zip Code #[input#zip-code(type="text" value=patron.zip_code name="zip_code")]
    p
      input(type="submit" value="Update")
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron 
        th Loaned on
        th Return by 
        th Returned on
        th Action 
    tbody
      each loan in patron.Loans
        tr
          td
            a(href="/books/update/" + loan.book_id) #{loan.Book.title}
          td
            a(href="/patrons/update/" + patron.id) #{patron.first_name} #{patron.last_name}
          td #{loan.loaned_on}
          td #{loan.return_by}
          td #{loan.returned_on}
          td.button 
            a(href="/loans/return/" + loan.id) Return Book